<p id="notice"><%= notice %></p>

<h1>Friend List</h1>

<table class="table table-striped table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cobarails.each do |cobarail| %>
      <tr>
        <td><%= cobarail.first_name %></td>
        <td><%= cobarail.last_name %></td>
        <td><%= cobarail.email %></td>
        <td><%= cobarail.phone %></td>
        <td><%= cobarail.twitter %></td>
        <td><%= link_to 'Show', cobarail %></td>
        <td><%= link_to 'Edit', edit_cobarail_path(cobarail) %></td>
        <td><%= link_to 'Destroy', cobarail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friends', new_cobarail_path, class: "btn btn-primary" %>
