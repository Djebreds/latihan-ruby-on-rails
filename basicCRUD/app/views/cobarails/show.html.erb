<div class="card mb-3 text-white bg-dark" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="..." class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title">
            <%= @cobarail.first_name %>
            <%= @cobarail.last_name %>
        </h3>
        <h5 class="card-subtitle mb-2 text-muted"> <%= @cobarail.twitter %> </h5>
        <h6 class="card-text">Email: <%= @cobarail.email %> </h6>
        <h6 class="card-text">Phone: <%= @cobarail.phone %> </h6>
        <%= link_to 'Edit', edit_cobarail_path(@cobarail), class: "btn btn-primary" %>
        <%= link_to 'Back', cobarails_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
